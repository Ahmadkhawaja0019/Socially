<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateStoryPage"
    android:background="@drawable/story_pic1">

    <LinearLayout
        android:id="@+id/topNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="8"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Position 1 - Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/crossButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/cross_button"
                android:background="@drawable/circular_black_background"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Position 2 - Empty Space -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <!-- Empty - no icon here -->
        </LinearLayout>

        <!-- Position 3 - Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/icon3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_tick_avatar"
                android:background="@drawable/circular_black_background"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Position 4 - Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/icon4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_typing"
                android:background="@drawable/circular_black_background"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Position 5 - Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/icon5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_smily2"
                android:background="@drawable/circular_black_background"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Position 6 - Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/icon6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_stars"
                android:background="@drawable/circular_black_background"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Position 7 - Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/icon7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/music_note"
                android:background="@drawable/circular_black_background"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Position 8 - Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/icon8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_three_dots_brown"
                android:background="@drawable/circular_black_background"
                android:padding="12dp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/storyBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/black"
        android:weightSum="10">

        <!-- Your Stories Button - 40% -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:background="@drawable/edittext_background_darkgrey"
            android:layout_marginEnd="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your stories"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsregular"/>
        </LinearLayout>

        <!-- Close Friends Button - 40% -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:background="@drawable/edittext_background_darkgrey"
            android:layout_marginEnd="8dp">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/greenbutton"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/close_friends"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsregular"/>
        </LinearLayout>

        <!-- Arrow Button - 20% -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center">
            <ImageView
                android:id="@+id/arrowbutton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerInside"
                android:src="@drawable/forwardbutton"
                android:background="@drawable/gerycolor_circular_border"
                android:padding="12dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>