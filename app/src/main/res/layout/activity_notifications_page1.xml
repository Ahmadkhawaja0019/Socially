<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationsPage1"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tab_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Following"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/barkhandi"
                android:fontFamily="@font/poppinssemibold"
                android:paddingVertical="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/barkhandi"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tab_accounts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/You"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/barkhandi"
            android:fontFamily="@font/poppinsregular"
            android:paddingVertical="8dp"/>
    </LinearLayout>
    <View
        android:id="@+id/dividerLine1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/top_bar"
        android:background="@color/whitishgrey"
        android:layout_marginEnd="0dp"/>

    <ScrollView
        android:id="@+id/notificationsScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/dividerLine1"
        android:layout_above="@+id/dividerLine2"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/story_pic1"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/notification1"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsregular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twohours"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/multicolor_border"
                    android:padding="6dp"
                    android:layout_marginEnd="12dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/story_pic2" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="@string/notification2"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twohours"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/post"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/story_pic3"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/notification3"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsregular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twohours"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/story_pic1"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="2dp" />

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/story_pic2"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="2dp" />

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/post"
                        android:scaleType="centerCrop" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">

                <FrameLayout
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/multicolor_border"
                    android:padding="6dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/story_pic4" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="@string/notification4"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/poppinsregular"
                        android:text="@string/threehours"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="1dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/story_pic1" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="1dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/story_pic2" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="1dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/story_pic3" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="1dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/post" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/story_pic4" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/story_pic1"
                        android:layout_gravity="start|top" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/story_pic2"
                        android:layout_gravity="end|bottom"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/white" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/notification5"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsregular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/threehours"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/post"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/gerycolor_circular_border"
                    android:padding="4dp"
                    android:layout_marginEnd="12dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_avatar" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/notification6"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsregular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/threedays"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/story_pic3"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/notification7"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsregular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/threedays"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/story_pic4"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/notification8"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsregular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/threedays"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/post"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <!-- Notification 9: Tagged you in post -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/story_pic1"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/notification9"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsregular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/threedays"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/story_pic2"
                    android:scaleType="centerCrop" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/dividerLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whitishgrey"
        android:layout_above="@+id/bottomNav"/>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/bottomBar"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="5">
        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_home_light"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:contentDescription="@string/home" />
        <ImageButton
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_search"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:contentDescription="@string/search" />
        <ImageButton
            android:id="@+id/nav_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_create"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:contentDescription="@string/add" />
        <ImageButton
            android:id="@+id/nav_heart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_heart_filled"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:contentDescription="@string/heart" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/default_avatar"
            android:background="@android:color/transparent"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/barkhandi"
            android:contentDescription="@string/profile" />

    </LinearLayout>
    <ImageView
        android:id="@+id/bottomBar"
        android:layout_width="280dp"
        android:layout_height="16dp"
        android:src="@drawable/bottombar_barkhandi"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="8dp"/>
</RelativeLayout>