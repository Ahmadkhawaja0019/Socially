<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/back_button_half_arrow"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/sociallyTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/socially"
        android:textColor="@color/barkhandi"
        android:textSize="48sp"
        android:fontFamily="@font/poppinssemibold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/userNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="@string/user_name"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginStart="16dp"
        android:background="@drawable/edittext_background_grey"
        android:layout_marginEnd="16dp"
        android:inputType="text"
        android:layout_marginBottom="14dp"
        android:layout_below="@id/sociallyTop"/>

    <EditText
        android:id="@+id/passInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="@string/password"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginStart="16dp"
        android:background="@drawable/edittext_background_grey"
        android:layout_marginEnd="16dp"
        android:inputType="text"
        android:layout_marginBottom="14dp"
        android:layout_below="@id/userNameInput"/>

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Forgot_password"
        android:textColor="@color/barkhandi"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsregular"
        android:layout_below="@+id/passInput"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"/>

    <TextView
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinssemibold"
        android:layout_below="@+id/forgotPassword"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_background_lightmehroon"/>

    <LinearLayout
        android:id="@+id/gapLines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="18dp"
        android:layout_below="@+id/loginButton">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/whitishgrey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:textColor="@color/darkgrey"
            android:layout_marginHorizontal="16dp"
            android:textSize="16sp"
            android:fontFamily="@font/poppinssemibold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/whitishgrey"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/signuptext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gapLines"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/donthaveaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dont_have_account"
            android:textColor="@color/lightmehroon"
            android:textSize="16sp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:id="@+id/signupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textColor="@color/barkhandi"
            android:textSize="16sp"
            android:fontFamily="@font/poppinssemibold"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <View
        android:id="@+id/dividerLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whitishgrey"
        android:layout_below="@+id/signuptext"
        android:layout_marginTop="110dp"
        android:layout_marginHorizontal="50dp"/>

    <TextView
        android:id="@+id/sociallyBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/socially"
        android:textColor="@color/barkhandi"
        android:textSize="24sp"
        android:fontFamily="@font/poppinssemibold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>