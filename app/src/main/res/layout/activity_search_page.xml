<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchPage"
    android:background="@color/milkywhite">

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_search_grey"
        android:drawablePadding="8dp"
        android:padding="4dp"
        android:hint="@string/internshala"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginStart="12dp"
        android:background="@drawable/edittext_background_whitishgrey"
        android:layout_marginEnd="24dp"
        android:inputType="text"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/clear_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="@string/clear"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/barkhandi"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:id="@+id/search_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/searchBar"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tab_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/top"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinssemibold"
                android:paddingVertical="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tab_accounts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Accounts"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/poppinssemibold"
            android:paddingVertical="8dp"/>
        <TextView
            android:id="@+id/tab_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tags"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/poppinssemibold"
            android:paddingVertical="8dp"/>
        <TextView
            android:id="@+id/tab_places"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/places"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/poppinssemibold"
            android:paddingVertical="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_section_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/search_tabs"
        android:background="@color/white">

        <ScrollView
            android:id="@+id/scroll_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/vertical_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_image_1"
                        android:layout_width="0dp"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/internshala"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:paddingStart="12dp">
                        <TextView
                            android:id="@+id/title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/internshala"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"/>
                        <TextView
                            android:id="@+id/subtitle_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/internshala"
                            android:textSize="14sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/poppinsregular"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_image_2"
                        android:layout_width="0dp"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_hashtag"
                        android:layout_gravity="center_vertical"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/black"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:paddingStart="12dp">
                        <TextView
                            android:id="@+id/title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hash_internshala"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"/>
                        <TextView
                            android:id="@+id/subtitle_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fivehundreed_post"
                            android:textSize="14sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/poppinsregular"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_image_3"
                        android:layout_width="0dp"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_hashtag"
                        android:layout_gravity="center_vertical"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/black"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:paddingStart="12dp">
                        <TextView
                            android:id="@+id/title_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hash_internshala2"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"/>
                        <TextView
                            android:id="@+id/subtitle_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/thousan_post"
                            android:textSize="14sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/poppinsregular"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_image_4"
                        android:layout_width="0dp"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_hashtag"
                        android:layout_gravity="center_vertical"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/black"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:id="@+id/title_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hash_internshala"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"/>
                        <TextView
                            android:id="@+id/subtitle_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/internshala_address"
                            android:textSize="14sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/poppinsregular"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_image_5"
                        android:layout_width="0dp"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_hashtag"
                        android:layout_gravity="center_vertical"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/black"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp">
                        <TextView
                            android:id="@+id/title_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/internshala_casmpus"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"/>
                        <TextView
                            android:id="@+id/subtitle_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hundred_post"
                            android:textSize="14sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/poppinsregular"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/bottomBar"
        android:layout_width="280dp"
        android:layout_height="16dp"
        android:src="@drawable/bottombar_barkhandi"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="8dp"/>

</RelativeLayout>